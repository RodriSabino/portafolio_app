---
import Section from "../Section.astro"

import { awards } from "@cv"
---

<Section title="Logros">
  <ul>
    {
      awards.map(({ title, date, awarder, summary }) => {
        const startYear = new Date(date).getFullYear()
        

        return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href={} title={`Ver ${title}`} target="_blank">
                        {title}
                      </a>
                    </h3>
                    <h4>{awarder}</h4>
                  </div>

                  <div>
                    <time>{startYear}</time>
                  </div>
                </header>
              </article>
            </li>
          )
      })
    }
  </ul>
</Section>

<style>
    ul {
      display: flex;
      flex-direction: column;
      gap: 32px;
      text-align: justify;
    }
  
    article h3 {
      font-weight: 500;
      color: #ffffff;
      text-align: justify;
    }
  
    header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
      text-align: justify;
  
    }
  
    time {
      color: #bbbbbb;
      font-size: 0.85rem;
      min-width: 102px;
      text-align:center;
  
    }
  
    @media (width <= 700px) {
      time {
        text-align: right;
      }
    }
  </style>
  